			<script>

				$(window).load(function () {

					var images = $('#project_slideshow ul li').children();
					var total_images = images.size();
					var current_image = 0;
					var current_thumb = 1;
					var moveBy = 0;

					if (total_images > 12) {
						$('#thumb_nav').fadeIn();
					}

					$('#next').click(function (e) {
						e.preventDefault();
						if (current_image < total_images - 1) {
							moveBy = moveBy + images[current_image].width + 1;
							$("#project_slideshow ul").animate({
								left: -moveBy
							}, (images[current_image].width * 5) / 1.5);
							$("#thumb ul li:nth-child(" + current_thumb + ") a").removeClass('activeSlide');
							current_image++;
							current_thumb++;
							$("#thumb ul li:nth-child(" + current_thumb + ") a").addClass('activeSlide');
						}
					});

					$('#previous').click(function (e) {
						e.preventDefault();
						if (current_image != 0) {
							$("#thumb ul li:nth-child(" + current_thumb + ") a").removeClass('activeSlide');
							current_image--;
							current_thumb--;
							$("#thumb ul li:nth-child(" + current_thumb + ") a").addClass('activeSlide');
							moveBy = moveBy - images[current_image].width - 1;
							$("#project_slideshow ul").animate({
								left: -moveBy
							}, (images[current_image].width * 5) / 1.5);
						}
					});

					var current_thumbs = 12;
					var move_thumbs = 0;

					$('#thumb_nav_next').click(function (e) {
						e.preventDefault();
						if (current_thumbs < total_images - 1) {
							move_thumbs = move_thumbs + 660;
							$("#thumb ul").animate({
								left: -move_thumbs
							}, 1000);
							current_thumbs = current_thumbs + 12;
						}
					});

					$('#thumb_nav_previous').click(function (e) {
						e.preventDefault();
						if (current_thumbs != 12) {
							current_thumbs = current_thumbs - 12;
							move_thumbs = move_thumbs - 660;
							$("#thumb ul").animate({
								left: -move_thumbs
							}, 1000);
						}
					});

					$('#thumb ul li a').click(function (e) {
						e.preventDefault();
						$("#thumb ul li:nth-child(" + current_thumb + ") a").removeClass('activeSlide');
						$(this).addClass('activeSlide');

						selected_image = parseInt($(this).attr('id'));

						if (selected_image > current_image) {
							for (var i = current_image; i < selected_image; i++) {
								moveBy = moveBy + images[i].width;
							}
						} else {
							for (var i = current_image; i > selected_image; i--) {
								moveBy = moveBy - images[i - 1].width;
								if (moveBy < 0) {
									moveBy = 0;
								}
							}
						}

						$("#project_slideshow ul").animate({
							left: -moveBy
						}, 1000);

						current_image = parseInt(selected_image);
						current_thumb = parseInt(selected_image) + 1;

					});

				});
			</script>


