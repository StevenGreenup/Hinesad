<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>

  <body>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-87250909-1', 'auto');
      ga('send', 'pageview');

    </script>


    <div class="contents">


  		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  			<!-- Indicators -->

  			<ol class="carousel-indicators">
  				<% @projects.each_with_index do |project, index| %>
  				<% if index == 0 %>
  				<li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="active"></li>
  			<% else %>
  				<li data-target="#carousel-example-generic" data-slide-to="<%= index %>"></li>
  				<% end %>
  				<% end %>
  			</ol>
  			<!-- Wrapper for slides -->
  			<div class="carousel-inner" role="listbox">
  				<% @projects.each_with_index do |project, index| %>
  				<% if index == 0 %>
  				<div class="item active">
            <div class="image">
              <%= image_tag project.picture, class:"img-responsive", id:"project-image" %>
            </div>

  					<div class="carousel-caption">
              <small>
                <p>
                  <strong><%= raw(project.name) %></strong>
                </p>

  						<p>
  						  <%= raw(project.location) %>
  						</p>
              <p>
                <%= raw(project.status) %>
              </p>

              <div id="more_info">
                <p>
                  <a href="" data-toggle="modal" data-target="#project<%= index %>"> <p> info +</p></a>
                  </small>
                </p>
              </div>


  					</div>
  				</div>
  			<% else %>
  				<div class="item">
            <div class="image">
            <%= image_tag project.picture, class:"img-responsive", id:"project-image" %>
            </div>

  					<div class="carousel-caption" >
              <small>
                <p>
                  <strong><%= raw(project.name) %></strong>
                </p>

  					<p>
  					  <%= raw(project.location) %>
  					</p>
            <p>
              <%= raw(project.status) %>
            </p>
              <div id="more_info">
                <p>
                  <a href="" data-toggle="modal" data-target="#project<%= index %>"> <p> info +</p></a>
                </p>
              </div>
              </small>
  					</div>
  				</div>
  				<% end %>




  				<div id="project<%= index %>" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  				  <div class="modal-dialog modal-lg" role="document">
  				    <div class="modal-content">
  							<div class="row">


  								<div class="col-sm-8">
                    <p>
                      <%= raw(project.name) %>
                    </p>
  									<%= raw(project.location) %>
                    <br>
  									<%= raw(project.description) %>
  								</div>
  								<div class="col-sm-4">
  									<%= raw(project.size) %>
  									<%= raw(project.structure_type) %>
  									<%= raw(project.status) %>

  								</div>
  								</div>

  				    </div>
  				  </div>
  				</div>


  				<% end %>
  			</div>
        </div>



  			<!-- Controls -->
        <div class="left">
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <%= image_tag "thumbsleft.png" %>
            <span class="sr-only">Previous</span>
          </a>
        </div>
        <div class="right">
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <%= image_tag "thumbsright.png" %>
            <span class="sr-only">Next</span>
          </a>
        </div>





</div>



  </body>
</html>
